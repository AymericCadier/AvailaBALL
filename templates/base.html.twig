{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}AVAILABALL{% endblock %}</title>

    <!-- Inclure les fichiers CSS de Bootstrap -->
    <link rel="stylesheet" href="assets/styles/bootstrap.css">
    <!-- <link rel="stylesheet" href="assets/styles/style1.scss"> -->
    <link rel="stylesheet" href="assets/styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    {% block stylesheets %}{% endblock %}
</head>
<body>

    <header>
        <!-- Barre de navigation -->
        <nav class="navbar navbar-dark bg-black fixed-top">
            <div class="container-fluid">
                <p style="color: black">Coucou ;)</p>
                <a class="navbar-brand" href="{{ path('app_home') }}"> <img src="../images/logo.png" alt="Bootstrap" width="90" height="90"><p style="color: white; font-family: Impact;"  >AVAILABALL</p></a>

                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel"><img src="../images/logo.png" alt="Bootstrap" width="100" height="100">MENU</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_maps') }}">Maps</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Voir plus
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" href="{{ path('app_compte') }}">Afficher profil</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_login') }}">Se déconnecter</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item" href="{{ path('app_terr') }}">Terrains</a></li>
                                </ul>
                            </li>
                        </ul>
                        <form class="d-flex mt-3" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        {% block body %}{% endblock %}
    </div>

    <!-- Inclure les fichiers JavaScript de Bootstrap (jQuery est nécessaire) -->
    <script src="assets/styles/js/bootstrap.js"></script>

    {% block javascripts %}{% endblock %}
    <!-- Footer commun à toutes les pages -->
    <footer class="mt-5 p-3 bg-light text-center">
        <p>&copy; 2024 Votre Entreprise. Tous droits réservés.</p>
    </footer>
</body>
</html>

