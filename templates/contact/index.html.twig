{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/css/create_evenement.css') }}">
{% endblock %}

{% block body %}
    <div class="d-flex flex-row">


        <div class="flex-grow-1">
            <div class="contact-box">
                <h2>Contactez-nous</h2>

                {% if app.user %}
                    <p>Bonjour {{ app.user.username }}, merci de vous être connecté !</p>
                {% endif %}

                <form method="post">
                    <div class="user-box">
                        <label for="name" class="user-box-label">Nom</label><br>
                        <input type="text" id="name" name="name" class="user-box-input" required>
                    </div>
                    <div class="user-box">
                        <label for="message" class="user-box-label">Message</label><br>
                        <textarea id="message" name="message" class="user-box-input" rows="5" required></textarea>
                    </div>
                    <button class="submit-button" type="submit">Envoyer</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
