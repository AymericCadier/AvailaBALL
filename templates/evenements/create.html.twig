<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/css/create_evenement.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/css/bouton.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    {% endblock %}
</head>
<body style="background-color: #16191c; color: white">

{% block body %}
    <div class="d-flex flex-row">
        {% include 'base.html.twig' %}

        <div class="flex-grow-1">
            <div class="login-box">
                <h2>Créer votre évènement</h2>

                {{ form_start(form) }}
                <div class="user-box">
                    {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'user-box-label'}}) }}
                    <br>
                    {{ form_widget(form.name, {'attr': {'class': 'user-box-input'}}) }}
                </div>
                <div class="user-box">
                    {{ form_label(form.date, 'Date', {'label_attr': {'class': 'user-box-label'}}) }}
                    <br>
                    {{ form_widget(form.date, {'attr': {'class': 'user-box-input'}}) }}
                </div>
                <div class="user-box">
                    {{ form_label(form.duration, 'Durée', {'label_attr': {'class': 'user-box-label'}}) }}
                    <br>
                    {{ form_widget(form.duration, {'attr': {'class': 'user-box-input'}}) }}
                </div>
                <div class="user-box">
                    {{ form_label(form.type, 'Type (tournoi, show, etc)', {'label_attr': {'class': 'user-box-label'}}) }}
                    <br>
                    {{ form_widget(form.type, {'attr': {'class': 'user-box-input'}}) }}
                </div>
                <div class="user-box">
                    {{ form_label(form.id_playground, 'Nom du playground', {'label_attr': {'class': 'user-box-label'}}) }}
                    <br>
                    {{ form_widget(form.id_playground, {'attr': {'class': 'user-box-input'}}) }}
                </div>

                <button class="submit-button" type="submit">Créer</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
</body>
</html>
