<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Envoyer un message</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/css/create_evenement.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/css/bouton.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    {% endblock %}
</head>
<body style="background-color: #16191c; color: white">

{% block body %}
    <div class="d-flex flex-row">
        {% include 'base.html.twig' %}

        <div class="flex-grow-1">
            <div class="login-box">
                <h2>Envoyer un message</h2>

                {{ form_start(form, {'attr': {'class': 'user-box'}}) }}
                {% for child in form %}
                    <div class="user-box">
                        {{ form_label(child, null, {'label_attr': {'class': 'user-box-label'}}) }}
                        <br>
                        {{ form_widget(child, {'attr': {'class': 'user-box-input'}}) }}
                    </div>
                {% endfor %}

                {{ form_end(form) }}

                <p>Résumé de la messagerie</p>
                <p>Reçu : {{ app.user.received|length }}</p>
                <p>Envoyés : {{ app.user.sent|length }}</p>

                <a class="submit-button" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                   aria-controls="offcanvasExample">
                    Link with href
                </a>

            </div>
        </div>
    </div>

    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h2 class="offcanvas-title" id="offcanvasExampleLabel">Mes dossiers</h2>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="list-group">
                <a href="{{ path("app_messages") }}" class="list-group-item
                list-group-item-action active">Accueil</a>
            </div>
            <div class="list-group">
                <a href="{{ path("app_received_messages") }}" class="list-group-item
                list-group-item-action">Boîte de réception</a>
            </div>
            <div class="list-group">
                <a href="{{ path("app_sent_messages") }}" class="list-group-item
                list-group-item-action">Éléments envoyés</a>
            </div>
        </div>
    </div>
{% endblock %}
</body>
</html>
